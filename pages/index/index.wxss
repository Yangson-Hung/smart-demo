.dev-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  top: 50rpx;
  left: 50rpx;
}

.addImg {
  height: 24px;
  width: 24px;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.add-dialog {
  position: fixed;
  top: 90rpx;
  right: 45rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
}

.add-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 40rpx;
  align-items: center;
  justify-content: center;
}

.scan-item {
  padding: 5px 15px;
  border-bottom: 1px solid #dedede;
}

.input-item {
  padding: 5px 15px;
}

.scan-item-hover {
  background-color: #e6e6e6;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.input-item-hover {
  background-color: #e6e6e6;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.dev-icon {
  width: 24px;
  height: 24px;
}

.dev-count {
  margin-left: 15rpx;
  font-size: 25rpx;
  color: white;
}

.headline {
  position: absolute;
  top: 200rpx;
  left: 50rpx;
  color: white;
  font-size: 40rpx;
}

.dev-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  left: 50rpx;
  top: 300rpx;
  background-color: white;
  border-radius: 25rpx;
  box-sizing: border-box;
}

.dev-image {
  width: 64px;
  height: 64px;
}

.dev-info-text {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mask-view {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.dialog-view {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.title-view {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.content-view {
  padding: 50rpx 32rpx;
}

.input-view {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

.input-holder {
  color: #666;
  font-size: 28rpx;
}

.footer-view {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.cancel-view {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.confirm-view {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
