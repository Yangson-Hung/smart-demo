.page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  color: #4682b4;
  font-size: 60rpx;
  font-weight: bold;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.body {
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0rpx 3rpx 6rpx rgba(26, 26, 26, 0.2);
}

.box {
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.title {
  padding-left: 40rpx;
  font-weight: bold;
  color: #4682b4;
}

input {
  padding-left: 20rpx;
}

.btn-area {
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.btn {
  background-color: #4682b4;
  color: white;
  font-weight: bold;
}

.btn::after {
  border-color: white;
} 

.btn-hover {
  background-color: #426a8a;
} 