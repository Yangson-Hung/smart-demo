.header {
  background-color: #4682B4;
  color: white;
}

.header-title {
  font-size: 100rpx;
  padding-top: 100rpx;
  padding-bottom: 50rpx;
  text-align: center;
}

.body {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  background-color: white;
  border-radius: 20rpx;
  position: relative;
  margin-top: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 0rpx 3rpx 6rpx rgba(26, 26, 26, 0.2);
}

.scan {
  width: 60rpx;
  height: 60rpx;
  padding-left: 50rpx;
}

.motto {
  font-weight: bold;
  font-size: 40rpx;
  padding-left: 30rpx;
}

.arrow {
  width: 25rpx;
  height: 25rpx;
  border-top: 5rpx solid gray;
  border-right: 5rpx solid grey;
  transform: rotate(45deg);
  margin-left: 330rpx;
}

.step {
  background-color: white;
  border-radius: 20rpx;
  position: relative;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 3rpx 6rpx rgba(26, 26, 26, 0.2);
}

.step-title {
  font-size: 40rpx;
  font-weight: bold;
  padding-left: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
}

.tip {
  color: gray;
  font-size: 30rpx;
  padding-left: 40rpx;
  padding-bottom: 15rpx;
  padding-right: 40rpx;
}
